<%-include("navbar.ejs")%>
<div class="container">
    <div class="row">
        <div class="col-md-12 d-flex justify-content-center align-items-center text-center gradient-background">
            <h1 class="text-dark " style="font-weight:600 ;">Offer2  Home page</h1>
        </div </div>
        
        <div class="row mt-5">
            <form action="/admin/save_second_offer" method="post" class="m-4" enctype="multipart/form-data">
                <div class="row">
                    
                    <div class="col-md-4">
                        Enter Home Head
                        <input type="text" name="offer2_head" class="form-control">
                    </div>
                    <div class="col-md-4">
                        Enter Sub Title
                        <input type="text" name="offer2_title" class="form-control">
                    </div>
                    <div class="col-md-4">
                        Enter Sub Description
                        <input type="text" name="offer2_desc" class="form-control">
                    </div>
                    <div class="col-md-4 mt-3">
                        Enter Sub Price
                        <input type="number" name="offer2_price" class="form-control">
                    </div>
                    <div class="col-md-4 mt-3">
                        Enter Sub Price
                        <input type="number" name="offer2_duplicate" class="form-control">
                    </div>
                    <div class="col-md-12 d-flex justify-content-center mt-4">
                        <button class="btn btn-success">Save </button>
                    </div>
                </div>
                
            </form>
        </div>
    </div>

    <table class="table table-striped table-bordered table-success">
        <tr>
            <th>Action</th>
            <th>SrNO</th>
            <th>Head Title</th>
            <th>Title</th>
            <th>Description</th>
            <th>Price </th>
            <th>Duplicate Price</th>
        </tr>

        <% for(var i=0; i<offer2.length;i++ ) { %>
        <tr>
            <td class="" style="width: 10%;">
                 <a href="/admin/edit_offer2/<%=offer2[i].offer_second_id%>" class=" btn btn-success p-1">
                    <i class="fa-solid fa-pen-to-square" ></i>
                 </a>
                 <a href="/admin/delete_offer2/<%=offer2[i].offer_second_id%>" class=" btn btn-danger p-1">
                    <i class="fa-solid fa-trash "></i>
                 </a>
            </td>
            <td><h3><%=i+1%></h3></td>
            <td><h3><%=offer2[i].offer2_head%></h3></td>
            <td><h3><%=offer2[i].offer2_title%></h3></td>
            <td><h3><%=offer2[i].offer2_desc%></h3></td>
            <td><h3>&#8377;<%=offer2[i].offer2_price%></h3></td>
            <td><h3>&#8377;<%=offer2[i].offer2_duplicate%></h3></td>
        </tr>

        <% } %>
    </table>
    <%-include("footer.ejs")%>