<%-include("navbar.ejs")%>

    <div class="container">
        <div class="row">
            <div class="col-md-12 d-flex justify-content-center align-items-center text-center gradient-background">
                <h1 class="text-dark " style="font-weight:600 ;">Contact Responses</h1>
            </div 
        </div>
    </div>

    <table class="table table-striped table-bordered table-success mt-5">
        <tr>
            
            <th>Action</th>
            <th>SrNO</th>
            <th>Name</th>
            <th>Email</th>
            <th>Mobile</th>
            <th>Message Issues</th> 
        </tr>
        <% for(var i=0; i<contact.length; i++)  { %>
            <tr>
                <td>
                    <a href="/admin/delete_contact/<%=contact[i].contact_id%>" class="btn btn-danger">
                        <i class="fa-solid fa-trash"></i>
                    </a>
                </td>
                <td><%=i+1%></td>
                <td><%=contact[i].name%></td>
                <td><%=contact[i].email%></td>
                <td><%=contact[i].mobile%></td>
                <td><%=contact[i].message%></td>

            </tr>
            <% } %>
    </table>

