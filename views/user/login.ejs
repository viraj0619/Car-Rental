<%-include("navbar.ejs")%>
<div class="login-container mt-5 mb-5">
    <form class="login-form" action="/save_login" method="post">
        <p class="heading">Login</p>
        <p class="paragraph">Login to your account</p>
        <div class="input-group">
            <input placeholder="Email or Mobile" name="user_email_mobile" id="username" type="text"/>
        </div>
        <div class="input-group">
            <input placeholder="Password" name="user_password" id="password" type="password"/>
        </div>
        <button  class="btn btn-primary ">Login</button>
        <div class="bottom-text">
            <p>Don't have an account? <a href="/register">New Register</a></p>
            <!-- <p><a href="#">Forgot password?</a></p> -->
        </div>
        <div class="d-flex justify-content-right ms-5">
             <a href="/logout" class="btn btn-danger ms-5">Logout</a>
        </div>
    </form>
</div>

