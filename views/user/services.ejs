<%-include('./navbar')%>
<section class="services_section">
<section>
    <div class="mid-heading">
        <h1>Our Latest Services</h1>
    </div>
</section>

    <div class="container mt-5">
        <div class="row" style="margin-left: 25px;">
         <%for(var i=0;i<services_info.length;i++){%>
          <div class="col-md-4 mb-5 col-sm-6">
            <div class="card h-100 shadow-sm">
                <div class="position-relative">
                    <img src="admin/uploads/<%=services_info[i].car_main_img%>" class="card-img-top" alt="Toyota Glanza 2021">
                    <div class="position-absolute top-0 start-0 p-2 text-white" style="border-radius: 0 0 5px 0;background-color: #10A310 !important;">
                        <%=services_info[i].car_dis%> %OFF
                    </div>
                </div>
                <div class="card-body">
                    <h5 class="card-title"><%=services_info[i].car_name%></h5>
                    <p class="card-text">. <%=services_info[i].car_type%> · <%=services_info[i].car_fuel_type%> · <%=services_info[i].car_seats%> Seats</p>
                    
                    <p class="card-text" style="padding: 10px; border-radius: 20px; background-color: rgb(231, 229, 229);">
                        <strong style="color: red;">Special Dis: <span style="color:#10A310;">₹<%=services_info[i].main_price%>/hr</span> </strong>
                        <del style="font-weight: 500; margin-left: 5px;">₹<%=services_info[i].car_actual_price%>/hr</del>
                    </p>
                    <p class="card-text"><small>₹<%=services_info[i].car_exc_fees%> excluding fees</small></p>
                    <%if(PickupData.pickup_location!=''){%>
                    <a href="/proccess_to_book/<%=services_info[i].car_services_id%>" class="btn btn-primary text-center">Book Now</a>
                    <%}else{%>
                        <a href="/" class="btn btn-primary text-center">Make Your Trip</a>
                        <%}%>
                </div>
            </div>           
        </div>
        <%}%>
        </div>
    </div>
  </section>

<%-include('./footer')%>
